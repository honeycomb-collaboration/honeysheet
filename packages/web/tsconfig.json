{
    "compilerOptions": {
      "isolatedModules": true,
      "target": "ESNext",
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "resolveJsonModule": true,
      "moduleResolution": "Node",
      "noImplicitThis": true,
      "esModuleInterop": true,
      "alwaysStrict": true,
      "experimentalDecorators": true,
      "noEmit": true,
      "baseUrl": ".",
      "lib": ["DOM", "dom"],
      "types": [
        "node",
        "vite/client"
      ],
      "paths": {
        "test/*": [
          "test/*"
        ]
      },
      "skipLibCheck": true
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "test"
    ]
  }
